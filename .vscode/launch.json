{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug WPF App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-debug",
            "program": "${workspaceFolder}/src/WpfApp/bin/Debug/net9.0-windows/WpfApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WpfApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "justMyCode": true,
            "requireExactSource": false,
            "suppressJITOptimizations": true,
            "logging": {
                "moduleLoad": false
            },
            "symbolOptions": {
                "searchPaths": [],
                "searchMicrosoftSymbolServer": false
            }
        }
    ]
}
